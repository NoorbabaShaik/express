pipeline {
  agent any

  environment {
    REGISTRY = ""          // e.g., "docker.io/noorbaba"
    IMAGE     = "express-app"
  }

  triggers {
    githubPush()           // responds to GitHub webhook
  }

  stages {
    stage("Checkout") {
      steps {
        git url: "https://github.com/NoorbabaShaik/express.git",
            credentialsId: "github-creds"
      }
    }

    stage("Build Image") {
      steps {
        script {
          docker.build("${IMAGE}:latest")
        }
      }
    }

    stage("Test") {
      steps {
        sh """
          echo "=== Running dummy test ==="
          docker run --rm ${IMAGE}:latest sh -c "curl -f http://localhost:8080 || exit 1"
        """
      }
    }
  }

  post {
    failure {
      echo "CI Pipeline failed."
    }
  }
}
